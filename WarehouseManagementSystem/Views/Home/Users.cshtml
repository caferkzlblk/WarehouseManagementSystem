@model IEnumerable<WarehouseManagementSystem.Models.Users>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .container {
            margin-top: 30px;
        }

        .btn-primary, .btn-success {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover, .btn-success:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #d39e00;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .table thead th {
            background-color: #343a40;
            color: #fff;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        .table tbody tr:hover {
            background-color: #e9ecef;
        }

        .card {
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .form-actions {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">@ViewData["Title"]</h1>

        <div class="mb-3">
            <a href="@Url.Action("UserCreate", "Home")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Kullanıcı Oluştur
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <th>Rol</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Role.RoleName</td>
                            <td class="text-center">
                                <a href="@Url.Action("UserEdit", "Home", new { id = user.UserID })" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <form action="@Url.Action("UserDelete", "Home", new { id = user.UserID })" method="post" style="display:inline;">
                                    <input type="submit" value="Sil" class="btn btn-danger btn-sm" />
                                    @Html.AntiForgeryToken()
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="form-actions">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                <i class="bi bi-house"></i> Ana Sayfa
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
