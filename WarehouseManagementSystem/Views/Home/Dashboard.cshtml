@model WarehouseManagementSystem.Models.OrderFilterViewModel

@{
    ViewData["Title"] = "Dashboard";
    var lowStockProducts = ViewBag.LowStockProducts as List<WarehouseManagementSystem.Models.Product>;
}
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (lowStockProducts != null && lowStockProducts.Any())
    {
        <h3>Düşük Stok Ürünleri</h3>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Mevcut Stok</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in lowStockProducts)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.QuantityInStock</td>
                    </tr>
                }
            </tbody>
        </table>

      
    }
    else
    {
        <p>Stokta düşük seviyede ürün bulunmamaktadır.</p>
    }
</div>

@section Scripts {
    
}
