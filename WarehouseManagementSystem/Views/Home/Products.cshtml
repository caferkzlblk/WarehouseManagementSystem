@model IEnumerable<WarehouseManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .container {
            margin-top: 30px;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #d39e00;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .table thead th {
            background-color: #007bff;
            color: #fff;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .form-actions {
            margin-top: 20px;
        }

            .form-actions a {
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">@ViewData["Title"]</h1>

        <div class="mb-3">
            <a href="@Url.Action("ProductCreate", "Home")" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Yeni Ürün Oluştur
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Açıklama</th>
                        <th>Stok Miktarı</th>
                        <th>Fiyat</th>
                        <th>Kategori</th>
                        <th>Tedarikçi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.Description</td>
                            <td>@product.QuantityInStock</td>
                            <td>@product.Price.ToString("C")</td>
                            <td>@product.Category.CategoryName</td>
                            <td>@product.Supplier.SupplierName</td>
                            <td class="text-center">
                                <a href="@Url.Action("ProductEdit", "Home", new { id = product.ProductID })" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <form action="@Url.Action("ProductDelete", "Home", new { id = product.ProductID })" method="post" style="display:inline;">
                                    <input type="submit" value="Sil" class="btn btn-danger btn-sm" />
                                    @Html.AntiForgeryToken()
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="form-actions">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                <i class="bi bi-house"></i> Ana Sayfa
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
